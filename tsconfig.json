{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "dist",
    "skipLibCheck": true,
    "lib": ["dom", "es7"]
  },
  "exclude": ["node_modules"]
}